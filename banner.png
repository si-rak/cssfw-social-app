<svg xmlns="http://www.w3.org/2000/svg" width="1280" height="640" viewBox="0 0 1280 640">
  <defs>
    <!-- Background gradients -->
    <linearGradient id="light" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%" stop-color="#F9FAFB"/>
      <stop offset="100%" stop-color="#E5E7EB"/>
    </linearGradient>
    <linearGradient id="dark" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%" stop-color="#0F172A"/>
      <stop offset="100%" stop-color="#1E293B"/>
    </linearGradient>
  </defs>

  <!-- Background auto-switch -->
  <rect width="1280" height="640" fill="url(#light)" class="light-mode"/>
  <rect width="1280" height="640" fill="url(#dark)" class="dark-mode"/>

  <!-- Logo Circle -->
  <circle cx="320" cy="320" r="120" fill="#3B82F6"/>

  <!-- C Letter -->
  <path d="M370 270a2 2 0 0 0-3 0c-4-2-8.3-3.3-13-3.3-14 0-25 11-25 25s11 25 25 25c4.7 0 9-1.3 13-3.3a2 2 0 0 0 3 0c1-.7 1.3-2 0.5-3a2 2 0 0 0-3-.5c-3.3 2-7 3-10.3 3a18 18 0 1 1 0-36c3.3 0 7 1 10.3 3a2 2 0 0 0 3-.5c.8-1 .5-2.3-.5-3z"
        fill="white"/>

  <!-- Title -->
  <text x="520" y="340" font-family="Poppins, sans-serif" font-size="72" font-weight="700" fill="#3B82F6">
    Connectify
  </text>

  <!-- Subtitle -->
  <text x="520" y="390" font-family="Inter, sans-serif" font-size="28" fill="#6B7280">
    Social Media Frontend App • Tailwind CSS • Dark Mode
  </text>

  <!-- Light/dark style switch -->
  <style>
    .dark-mode { display: none; }
    @media (prefers-color-scheme: dark) {
      .light-mode { display: none; }
      .dark-mode { display: block; }
      text { fill: #E2E8F0; }
    }
  </style>
</svg>
